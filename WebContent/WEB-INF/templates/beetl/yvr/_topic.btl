<%DIRECTIVE DYNAMIC;%>
<%
layout("_layout.btl",{}){
%>
<div id='sidebar'>
  <div class='panel'>
    <div class='header'>
      <span class='col_fade'>作者</span>
    </div>
    <div class='inner'>
    	<% layout("user/card.btl", {"user": obj.topic.author}){};%>
    </div>
  </div>


  <div class='panel'>
    <div class='header'>
      <span class='col_fade'>作者其它话题</span>
    </div>
    <div class='inner'>
      <p>无</p>
    </div>
  </div>

  <div class='panel'>
    <div class='header'>
      <span class='col_fade'>无人回复的话题</span>
    </div>
    <div class='inner'>
      <p>无</p>
    </div>
  </div>
